<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zzx.haoniu.hzcxkuaiche.activity.CityActivity">

    <LinearLayout
        android:id="@+id/activity_city"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/common_navigation" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/lvProC"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/colorWhite"
                android:divider="@color/transparent"
                android:dividerHeight="0dip"
                android:scrollbars="none"></ListView>

            <ListView
                android:id="@+id/lvCityC"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/colorGrayM"
                android:divider="@color/transparent"
                android:dividerHeight="0dip"></ListView>

            <ListView
                android:id="@+id/lvAreaC"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/colorGrayText"
                android:divider="@color/transparent"
                android:dividerHeight="0dip"></ListView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
