<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/llMain3Level1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="发布行程，等待顺风车来接你"
                android:textColor="@color/colorGrayText28"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvMain3MarkTripC"
                style="@style/redText"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_redgray0"
                android:text="发布行程" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvAddAddressC"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/kuang_graywhite0"
                android:gravity="center"
                android:text="添加新的常用路线，寻找车主"
                android:textColor="@color/colorRed"
                android:textSize="15sp" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollViewM3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/llMain3Level2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp"
                    android:background="@mipmap/img_driver" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="顺路接一单，轻松赚油费"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="您还不是车主，请先完成车主认证，才能顺利接单哦！"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvMain3Certified"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_redgray0"
                    android:gravity="center"
                    android:text="车主认证"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp" />

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/llMain3Level3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布行程，顺路接一单"
                    android:textColor="@color/colorGrayText28"
                    android:textSize="15sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/img_orderinfoo" />

                <TextView
                    android:id="@+id/tvMain3OrderInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:text="我的订单"
                    android:textColor="@color/colorOrange"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvMain3MarkTripD"
                style="@style/redText"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_redgray0"
                android:text="发布行程" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvAddAddressD"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/kuang_graywhite0"
                android:gravity="center"
                android:text="添加新的常用路线，寻找车主"
                android:textColor="@color/colorRed"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>

    <include layout="@layout/layout_xian" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llMain3Custom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivMain3Custonm"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:background="@mipmap/img_chengkec" />

            <TextView
                android:id="@+id/tvMain3Custom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="我的乘客"
                android:textColor="@color/colorRed"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMain3Driver"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivMain3Driver"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:background="@mipmap/img_chezhu" />

            <TextView
                android:id="@+id/tvMain3Driver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="我是车主"
                android:textColor="@color/colorGrayText68"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>