<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zzx.haoniu.nghmtaxi.activity.ModifyPwdActivity">

    <LinearLayout
        android:id="@+id/activity_modify_pwd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/common_navigation" />

        <include layout="@layout/layout_xian" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/edPwd1MP"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/kuang_graywhite0"
                android:hint="原密码"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorGrayText88"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edPwd2MP"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/kuang_graywhite0"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorGrayText88"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edPwd3MP"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/kuang_graywhite0"
                android:hint="请再次输入密码"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorGrayText88"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvUpdateMP"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="75dp"
                android:background="@drawable/border_redgray0"
                android:gravity="center"
                android:text="确认修改"
                android:textColor="@color/colorWhite"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
