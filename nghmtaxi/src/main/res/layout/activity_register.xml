<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="com.zzx.haoniu.nghmtaxi.activity.RegisterActivity">

    <LinearLayout
        android:id="@+id/activity_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/common_navigation" />

        <EditText
            android:id="@+id/edPhoneR"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/shap_tran_0"
            android:hint="请输入11位手机号"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorGrayText68"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="15dp"
            android:background="@drawable/shap_tran_0"
            android:gravity="center_vertical"
            android:paddingRight="5dp">

            <EditText
                android:id="@+id/edCodeR"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:hint="请输入验证码"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorGrayText68"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvCodeR"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/border_redgray5"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="获取验证码"
                android:textColor="@color/colorWhite"
                android:textSize="15sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/edPwdR"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/shap_tran_0"
            android:hint="请输入密码（6~16个字符）"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorGrayText68"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edConfirmPwdR"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shap_tran_0"
            android:hint="请输入确认密码"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorGrayText68"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvNextR"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/border_redgray5"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>
