<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register_next"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="match_parent"
    tools:context="com.zzx.haoniu.hzcxdj.activity.RegisterNextActivity">
    <include layout="@layout/common_navigation" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="75dp"
        android:layout_marginTop="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivUserHeadRN"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/img_upload"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <include layout="@layout/layout_xian" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <TextView
                        style="@style/grayText"
                        android:text="姓名"
                        android:textColor="@color/colorGrayText48" />

                    <EditText
                        android:id="@+id/edNameRN"
                        style="@style/registerEdit"
                        android:hint="填写姓名" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:visibility="gone">

                    <TextView
                        style="@style/grayText"
                        android:text="身份证号"
                        android:textColor="@color/colorGrayText48" />

                    <EditText
                        android:id="@+id/edCardNumRN"
                        style="@style/registerEdit"
                        android:hint="填写本人身份证号码" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:visibility="gone">

                    <TextView
                        style="@style/grayText"
                        android:text="银行卡"
                        android:textColor="@color/colorGrayText48" />

                    <EditText
                        android:id="@+id/edBankRN"
                        style="@style/registerEdit"
                        android:hint="请输入本人银行卡号" />
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="车辆信息"
                    android:textColor="@color/colorGrayText48"
                    android:textSize="15sp"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/tvCarBelongRN"
                    style="@style/ownerGrayText1"
                    android:layout_height="45dp"
                    android:drawableRight="@mipmap/img_jiantou"
                    android:text="选择车辆所属地区"
                    android:textColor="@color/colorGrayText48"
                    android:visibility="gone" />

                <include layout="@layout/layout_xian" />

                <TextView
                    android:id="@+id/tvCarCompanyRN"
                    style="@style/ownerGrayText1"
                    android:layout_height="45dp"
                    android:drawableRight="@mipmap/img_jiantou"
                    android:text="出租车公司       海马"
                    android:textColor="@color/colorGrayText48"
                    android:visibility="gone" />

                <include layout="@layout/layout_xian" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:visibility="gone">

                    <TextView
                        style="@style/grayText"
                        android:text="车牌号"
                        android:textColor="@color/colorGrayText48" />

                    <EditText
                        android:id="@+id/edCarPlatRN"
                        style="@style/registerEdit"
                        android:hint="请填写车牌号" />
                </LinearLayout>
                <include layout="@layout/layout_xian" />
                <LinearLayout
                    android:id="@+id/llSexUD"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        style="@style/grayText"
                        android:text="性别" />

                    <TextView
                        android:id="@+id/tvSexUD"
                        style="@style/grayText"
                        android:text="男"
                        android:textColor="@color/colorGrayText68" />

                </LinearLayout>

                <include layout="@layout/layout_xian" />

                <TextView
                    style="@style/ownerGrayText1"
                    android:layout_height="45dp"
                    android:text="驾驶证照片" />

                <ImageView
                    android:id="@+id/ivJiaShiRN"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@mipmap/img_photochoose"
                    android:scaleType="centerCrop" />

                <include layout="@layout/layout_xian" />

                <TextView
                    style="@style/ownerGrayText1"
                    android:layout_height="45dp"
                    android:text="行驶证照片" />

                <ImageView
                    android:id="@+id/ivXingShiRN"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@mipmap/img_photochoose"
                    android:scaleType="centerCrop" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvRegisterRN"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:background="@drawable/border_redgray5"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/colorWhite"
        android:textSize="15sp" />
</RelativeLayout>
